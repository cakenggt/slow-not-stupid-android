<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/token_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="token" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view"
        android:layout_below="@+id/token_text"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Submit token and location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/token_button_id"
        android:layout_below="@+id/text_view"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Scan code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_button"
        android:layout_alignParentStart="true"
        android:id="@+id/scan_code_button"
        android:layout_alignEnd="@+id/create_button" />

    <Button
        android:text="View Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scan_code_button"
        android:layout_alignParentStart="true"
        android:id="@+id/view_code_button"
        android:layout_alignEnd="@+id/scan_code_button" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout_button"
        android:layout_below="@+id/token_button_id"
        android:layout_alignEnd="@+id/token_button_id"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Create It"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_button"
        android:layout_below="@+id/logout_button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/logout_button" />
</RelativeLayout>
